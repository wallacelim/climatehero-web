{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": ["plugin:react/recommended", "airbnb", "prettier/react"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
        "indent": ["error", 4],
        "quotes": ["error", "double"],
        "no-console": ["error", { "allow": ["warn", "error", "log"] }],
        "react/prop-types": [0],
        "no-alert": [0],
        "no-shadow": ["error", { "builtinGlobals": false, "hoist": "functions", "allow": ["res", "resolve", "err", "error", "name"] }]
    }
}
